<div id="TabbedPanels1" class="TabbedPanels">
  <ul class="TabbedPanelsTabGroup">
    <li class="TabbedPanelsTab full-width TabbedPanelsTabSelected" tabindex="0">My Reviews</li>
  </ul>

  <div class="TabbedPanelsContentGroup">
    <div class="TabbedPanelsContent">
      <div class="col-xs-12 reviewer_details nopadding_lr">
        <div class="col-xs-2 text-left">
          <% if @order.videos.present? %>
            <% if @order.videos.count == 2 %>
              <a href="#" data-toggle="modal" data-target="#myModal1" ><%= image_tag @order.videos.first.video_url(:thumb1), :size => "120x90", :class => "pad-btm" %></a>
              <a href="#" data-toggle="modal" data-target="#myModal2" ><%= image_tag @order.videos.last.video_url(:thumb1), :size => "120x90" %></a>
            <% elsif @order.videos.count == 1 %>
              <a href="#" data-toggle="modal" data-target="#myModal1" ><%= image_tag @order.videos.first.video_url(:thumb1), :size => "120x90", :class => "pad-btm" %></a>
            <% end %>
          <% else %>
            <a href="#" data-toggle="modal" data-target="#myModal" ><%= image_tag "thumb_video.jpg" %></a>
          <% end %>
        </div>
        <div class="col-xs-10 text-left">
          <h3><%= @order.try(:title) %></h3>
          <p><%= @order.try(:description) %></p>
        </div>
      </div>
      <% if @reviewer.present? %>
        <div class="col-xs-12 text-left reviewer_details">
          <h3>Technical Notes</h3>
          <p><%= raw @reviewer.technical_notes %></p>
        </div>
        <div class="col-xs-12 text-left reviewer_details">
          <h3>Tactical Notes</h3>
          <p><%= raw @reviewer.tactical_notes %></p>
        </div>
      <% end %>
      <div class="col-xs-12 text-left order_details">
        <h2>Order Details</h2>
        <ul>
          <% if @order.payment.present? %>
            <li class="text-left">Order #<%= @order.try(:payment).try(:transcation_id) %></li>
            <% if @order.payment.date_of_payment.present? %>
              <li class="pull-right"><%= @order.payment.date_of_payment.strftime("%B %d, %Y") %></li>
            <% end %>
          <% end %>
        </ul>
        <h3><%= @order.try(:title) %></h3>
        <p><%= @order.try(:description) %></p>
      </div>
