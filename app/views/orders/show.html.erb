      <% if @reviewer.present? %>
        <table class="table">
          <tr>
            <td>
              <table class="table nomargin">
                <thead>
                  <tr>
                    <th>
                      Reviewed by - <span class="light_txt"><%= @reviewer.user.try(:fullname)%></span></th>
                    <th></th>
                  </tr>
                </thead>
