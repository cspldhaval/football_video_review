<h3>My Reviews</h3>

<table>
  <thead>
    <tr>
      <th></th>
      <th>User Videos</th>
      <th>Status</th>
      <th>Review</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= image_tag review.order.videos.first.video_url(:thumb1) %></td>
        <td><%= "#{review.order.user.try(:fullname)}'s #{review.order.try(:title)}" %></td>
        <td><%= Order::STATUS.key(review.order.status) %></td>
        <% if review.order.status == 7 %>
          <td><%= link_to 'Click To Review', review_order_path(review.order) %></td>
        <% elsif review.order.status == 6 %>
          <td><%= link_to 'Revise Review', review_order_path(review.order) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
