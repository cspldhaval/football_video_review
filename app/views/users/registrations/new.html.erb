<div id="TabbedPanels1" class="TabbedPanels">
  <ul class="TabbedPanelsTabGroup">
    <a href="<%= new_user_session_path %>"><li class="TabbedPanelsTab" tabindex="0">Sign in</li></a>
    <li class="TabbedPanelsTab TabbedPanelsTabSelected" tabindex="1">Sign up</li>
  </ul>

  <div class="TabbedPanelsContentGroup">
    <div class="TabbedPanelsContent" style="display: none;">
    </div>
    <div class="TabbedPanelsContent TabbedPanelsContentVisible" style="display: block;">
      <div class="tab_content col-xs-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "col-xs-12") do |f| %>
          <%#= devise_error_messages! %>
          <% if resource.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% resource.errors.full_messages.each do |message| %>
                  <li class="error_div"><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <ul class="col-xs-12">
            <div class="col-xs-12 col-sm-6">
              <li>
                <h2 class="pull-left">First Name</h2>
                <span class="box">
                  <%= image_tag "icons/name.png"%>
                  <%= f.text_field :first_name, :tabindex => "1" %>
                </span>
              </li>

              <li>
                <h2 class="pull-left">E-Mail</h2>
                <span class="box">
                  <%= image_tag "icons/mail.png" %>
                  <%= f.email_field :email, :tabindex => "3" %>
                </span>
              </li>

              <li>
                <h2 class="pull-left">Password</h2>
                <span class="box">
                  <%= image_tag "icons/password.png" %>
                  <%= f.password_field :password, autocomplete: "off", :tabindex => "5" %>
                </span>
              </li>
              <li>
                <h2 class="pull-left">Date of Birth</h2>
                <span class="box">
                  <%= image_tag "icons/dob.png" %>
                  <%= f.text_field :date_of_birth, autocomplete: "off", :id => "dob", :tabindex => "7" %>
                </span>
              </li>

            </div>
            <div class="col-xs-12 col-sm-6">
              <li>
                <h2 class="pull-left">Last Name</h2>
                <span class="box">
                  <%= image_tag "icons/name.png"%>
                  <%= f.text_field :last_name, :tabindex => "2" %>
                </span>
              </li>
              <li>
                <h2 class="pull-left">Gender</h2>
                <span class="box">
                  <div class="radio">
                    <%= f.radio_button :gender, 1 , :checked => true , class: "styled", :tabindex => "4" %>
                    <label for="male">Male</label>
                    <%= f.radio_button :gender, 2 , class: "styled" %>
                    <label for="female">Female</label>
                  </div>
                </span>
              </li>
              <li>
                <h2 class="pull-left">Confirm Password</h2>
                <span class="box">
                  <%= image_tag "icons/password.png" %>
                  <%= f.password_field :password_confirmation, :tabindex => "6" %>
                </span>
              </li>
              <li>
                <h2 class="pull-left">Zip Code</h2>
                <span class="box">
                  <%= image_tag "icons/zip.png" %>
                  <%= f.text_field :zipcode, :tabindex => "8" %>
                </span>
              </li>
            </div>
            <div class="col-xs-12 nopadding_lr">
              <div class="col-xs-12 col-sm-6">
                <li>
                  <h2 class="pull-left">Soccer Club</h2>
                  <span class="box">
                    <%= image_tag "icons/club.png" %>
                    <%= f.text_field :soccer_club, :tabindex => "9" %>
                  </span>
                </li>
              </div>
              <div class="col-xs-12 col-sm-6">
                <li>
                  <h2 class="pull-left icon-grey">Soccer Goal <i class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" title="Example: play on a middle school team, play on a high school team, play professionally, etc."></i></h2>
                  <span class="box">
                    <%= image_tag "icons/goal.png" %>
                    <%= f.text_field :soccer_goal, :tabindex => "10" %>
                  </span>
                </li>
              </div>
            </div>
            <div class="col-xs-12">
              <li>
                <h2 class="pull-left">Position</h2>
                <span class="box">
                  <%= image_tag "icons/position.png" %>
                  <%= f.text_field :position, :tabindex => "11" %>
                </span>
              </li>
            </div>
            <div class="col-xs-12 col-sm-3"></div>
            <div class="col-xs-12 col-sm-6">
              <li>
                <button tabindex="12">Sign up</button>
              </li>

              <li>
                <h2>Already a member?</h2> &nbsp;
                <%- if controller_name != 'sessions' %>
                  <%= link_to "Sign in here", new_session_path(resource_name) %><br />
                <% end -%>
              </li>
            </div>
            <div class="col-xs-12 col-sm-3"></div>
          </ul>
          <%= f.hidden_field :user_type, :value => "#{User::USER_TYPES["user"]}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('.field_with_errors').contents().unwrap();
    $('#dob').datetimepicker({
      format: 'MM-DD-YYYY'
    });
    $('[data-toggle="tooltip"]').tooltip();
  });
</script>