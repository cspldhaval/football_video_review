<div class="container">
  <div id="TabbedPanels1" class="TabbedPanels">
  	<ul class="TabbedPanelsTabGroup">
      <li class="TabbedPanelsTab full-width TabbedPanelsTabSelected" tabindex="0">My Profile</li>
    </ul>
    <div class="TabbedPanelsContentGroup">
    	<div class="TabbedPanelsContent">
    		<div class="tab_content col-xs-12">
    			<form class="col-xs-12">
            <ul class="col-xs-12">
              <div class="col-xs-12 nopadding_lr">
								<div class="col-xs-12 col-sm-3 view_profile_img">
									<%= image_tag current_user.avatar.url , alt:"image"%>
								</div>
								<div class="col-xs-12 col-sm-9 nopadding_lr">
									<div class="col-xs-12 nopadding_lr view_profile_data margin_btm_20">
										<% if current_user.fullname.present? %>
                      <div class="col-xs-12 col-sm-4">
                        <%= image_tag "icons/name.png" %> <span><%= current_user.try(:fullname) %></span>
                      </div>
                    <% end %>
                    <% if current_user.date_of_birth.present? %>
										  <div class="col-xs-12 col-sm-4">
                        <%= image_tag "icons/dob.png" %> <span><%= current_user.try(:date_of_birth).strftime("%b %d, %Y") %></span>
                      </div>
                    <% end %>
										<% if current_user.is_user? %>
                      <% if current_user.phone_number.present? %>
											 <div class="col-xs-12 col-sm-4">
                        <%= image_tag "icons/phone.png" %> <span><%= current_user.try(:phone_number) %></span>
                      </div>
                      <% end %>
                    <% end %>
										<%# elsif current_user.is_admin? %>
										<div class="col-xs-12 col-sm-6">
                      <%= image_tag "icons/mail.png" %> <span><%= current_user.try(:email) %></span>
                    </div>
									</div>
									<div class="col-xs-12 nopadding_lr view_profile_data margin_btm_20">
										<% if !current_user.is_admin? %>
                      <% if current_user.address.present? %>
											  <div class="col-xs-12 col-sm-4">
                          <span class="media-left nopadding_lr"> <%= image_tag "icons/address.png" %> </span>
                          <span class="media-body"> <%= current_user.try(:address) %> </span>
                        </div>
                      <% end %>

											<div class="col-xs-12 col-sm-4">
                        <% if current_user.is_reviewer? %>
                          <% if current_user.current_club.present? %>
                            <span class="media-left nopadding_lr"><%= image_tag "icons/club.png" %></span>
                            <span class="media-body"><%= current_user.current_club %></div>
                          <% end %>
                        <% elsif current_user.is_user? %>
                          <% if current_user.soccer_club.present? %>
                            <span class="media-left nopadding_lr"><%= image_tag "icons/club.png" %></span>
                            <span class="media-body"><%= current_user.soccer_club %></div>
                          <% end %>
                        <% end %>
                      </div>
										<% end %>
										<% if current_user.is_user? %>
                      <% if current_user.soccer_goal.present? %>
  											<div class="col-xs-12 col-sm-4">
                          <%= image_tag "icons/goal.png" %> <span><%= current_user.try(:soccer_goal) %></span>
                        </div>
                      <% end %>
										<% end %>
									</div>
								</div>
								<% if current_user.is_reviewer? %>
                  <% if current_user.description.present? %>
  									<div class="col-xs-12 view_profile_data" style="margin-top: 15px;">
  										<span class="media-left nopadding_lr"><%= image_tag "icons/description.png" %></span>
                      <span class="media-body" style="vertical-align: middle;"><%= current_user.try(:description) %></span>
  									</div>
                  <% end %>
								<% end %>
              </div>
              <%#= link_to 'Edit Profile', edit_user_registration_path %>
            </ul>
          </form>
    		</div>
    	</div>
    </div>
  </div>
</div>

