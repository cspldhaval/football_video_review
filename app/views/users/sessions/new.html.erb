<div id="TabbedPanels1" class="TabbedPanels">
    <ul class="TabbedPanelsTabGroup">
      <li class="TabbedPanelsTab TabbedPanelsTabSelected full-width" tabindex="0">Sign in</li>
      <!-- <a href="<%#= new_user_registration_path %>"><li class="TabbedPanelsTab" tabindex="0">Sign up</li></a> -->
    </ul>

    <div class="TabbedPanelsContentGroup">
      <div class="TabbedPanelsContent TabbedPanelsContentVisible" style="display: block;">
        <div class="tab_content col-xs-12">
          <ul class="col-xs-12">
            <div class="col-xs-12 col-sm-3 nopadding_lr"></div>
            <div class="col-xs-12 col-sm-6 nopadding_lr">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {:class=>"col-xs-12"}) do |f| %>
                <ul>
                  <li>
                    <h2 class="pull-left">E-Mail</h2>
                    <span class="box">
                      <%= image_tag "icons/mail.png" %>
                      <%= f.email_field :email, autofocus: true %>
                    </span>
                  </li>

                  <li>
                    <h2 class="pull-left">Password</h2>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot Password?","#", :class=>"pull-right" ,data: {toggle: "modal", target: "#myModal"}%><br />
                    <% end -%>
                    <span class="box">
                      <%= image_tag "icons/password.png" %>
                      <%= f.password_field :password, autocomplete: "off" %>
                    </span>
                  </li>

                  <li>
                    <button type="submit">Sign in</button>
                    <%#= f.submit "Sign in" %>
                  </li>

                  <li>
                    <h2>Not yet member?</h2> &nbsp;
                    <%#- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <%= link_to "Sign up here", new_registration_path(resource_name) %>
                    <%# end -%>
                  </li>
                </ul>
              <% end %>
            </div>
            <div class="col-xs-12 col-sm-3"></div>
          </ul>
        </div>
      </div>
    </div>
  </div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog border_blr_20" style="background-color:#fff;">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header no-border">
          <ul class="TabbedPanelsTabGroup">
            <li class="TabbedPanelsTab TabbedPanelsTabSelected full-width" tabindex="0">Forgot Password?
            <%= image_tag "icons/close.png" ,:class=>"pull-right close" ,"data-dismiss": "modal"%></li>
          </ul>
      </div>
    </div>

    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , class:"col-xs-12"}) do |f| %>
      <ul>
        <%#= devise_error_messages! %>
        <% if resource.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li class="error_div"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <li><h2 class="notificaion_txt">If you have forgotten your password <br> you can reset it here.</h2></li>
        <li>
          <h2 class="pull-left">E-Mail</h2>
          <span class="box">
            <%= image_tag "icons/mail.png" %>
            <%= f.email_field :email, autofocus: true %>
          </span>
        </li>
        <li>
          <button type="submit">Reset Password</button>
        </li>
      </ul>
      <% end %>
    </div>
    <div class="modal-footer no-border"></div>
  </div>
</div>
<script type="text/javascript">
  var TabbedPanels1 = new Spry.Widget.TabbedPanels("TabbedPanels1");
</script>
