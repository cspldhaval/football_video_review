<%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "col-xs-12") do |f| %>
  <ul class="col-xs-12">
    <div class="col-xs-12 col-sm-3"></div>
    <div class="col-xs-12 col-sm-6">
      <li>
        <h2 class="pull-left">E-Mail</h2>
        <span class="box">
          <%= image_tag "icons/mail.png" %>
          <%= f.email_field :email, autofocus: true %>
        </span>
      </li>
      
      <li>
        <h2 class="pull-left">Password</h2> 
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot Password?","#", :class=>"pull-right" ,data: {toggle: "modal", target: "#myModal"}%><br />
        <% end -%>
        <span class="box">
          <%= image_tag "icons/password.png" %>
          <%= f.password_field :password, autocomplete: "off" %>
        </span>
      </li>
      
      <li>
        <button type="submit">Sign in</button>
      </li>
      
      <li>
        <h2>Not yet member?</h2> 
        <%#- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up here", new_registration_path(resource_name) %>
        <%# end -%>
      </li>
    </div>
    <div class="col-xs-12 col-sm-3"></div>
  </ul>
<% end %>

<div class="modal fade" id="myModal" role="dialog" style="display: none;">
  <div class="modal-dialog" style="background-color:#fff;">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header no-border">
        <ul class="TabbedPanelsTabGroup">
          <li class="TabbedPanelsTab TabbedPanelsTabSelected full-width" tabindex="0">Forgot Password?
          <%= image_tag "icons/close.png" ,:class=>"pull-right close" ,"data-dismiss": "modal"%></li>
        </ul>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
          <ul>
            <li>
              <h2 class="notificaion_txt">If you have forgotten your password <br> you can reset it here.</h2>
            </li>

            <li>
                <h2 class="pull-left">E-Mail</h2>
                <span class="box">
                    <%= image_tag "icons/mail.png" %>
                    <!-- <input type="text" name="email"> -->
                    <%= f.email_field :email, autofocus: true %>
                </span>
            </li>

            <li>
              <button type="submit">Reset Password</button>
            </li>
          </ul>
        <% end %>
      </div>
      <div class="modal-footer no-border"></div>
    </div>
  </div>
</div>