<%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "col-xs-12") do |f| %>
  <ul class="col-xs-12">
    <div class="col-xs-12 col-sm-3"></div>
    <div class="col-xs-12 col-sm-6">
      <li>
        <h2 class="pull-left">E-Mail</h2>
        <span class="box">
          <%= image_tag "icons/mail.png" %>
          <%= f.email_field :email, autofocus: true %>
        </span>
      </li>
      
      <li>
        <h2 class="pull-left">Password</h2> 
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot Password?", new_password_path(resource_name) , :class=>"pull-right" %><br />
        <% end -%>
        <span class="box">
          <%= image_tag "icons/password.png" %>
          <%= f.password_field :password, autocomplete: "off" %>
        </span>
      </li>
      
      <li>
        <button type="submit">Sign in</button>
      </li>
      
      <li>
        <h2>Not yet member?</h2> 
        <%#- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up here", new_registration_path(resource_name) %>
        <%# end -%>
      </li>
    </div>
    <div class="col-xs-12 col-sm-3"></div>
  </ul>
<% end %>