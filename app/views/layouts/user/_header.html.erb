<div class="container-fluid nopadding_lr margin_btm_30">
  <header class="col-xs-12">
    <div class="container">
      <div class="logo pull-left">
        <a href="#">
          <%= image_tag "logo.png" ,:class=> "img-responsive" %></a>
      </div>
       <div class="navigation pull-right">
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to "Log out", destroy_user_session_path , method: "delete" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>
  <!-- navigation -->
  <div class="navigation white_bg col-xs-12">
    <ul class="container padding_tb_20 menu-font">
      <li>
        <a href="#" class="dark_gray">Home</a>
      </li> |
      <li>
        <a href="<%= order_step_path(:add_order) %>" class="dark_gray" id="new_order">Upload Videos</a>
        <%#= link_to 'My Orders', my_orders_path ,:class => "dark_gray" %>
      </li> |
      <li>
        <a href="<%= my_orders_path %>" class="<%= current_path(my_orders_path) %> dark_gray">My Reviews</a>
        <%#= link_to 'Make Order', order_steps_path ,:class => "dark_gray" %>
      </li> |
      <!-- <li>
        <%#= link_to "Pending Orders", orders_path(:type => "New") ,:class => "dark_gray" %>
      </li> |
      <li>
        <%#= link_to "Approved Orders", orders_path(:type => "Review approved") , :class =>"dark_gray" %>
      </li> | -->
      <li>
        <a href="<%= my_profile_path %>" class="<%= current_path(my_profile_path) %> dark_gray">My Profile</a>
      </li> 
    </ul>
  </div>
  <!-- Navigation closed -->
</div>

<script type="text/javascript">
$(document).ready(function(){
 crnt_path = window.location.pathname
 if (crnt_path == "/order_steps/add_order" || crnt_path == "/order_steps/add_payment"){
  $(".dark_gray").removeClass("green");
  $("#new_order").addClass("green");
 }
});
</script>