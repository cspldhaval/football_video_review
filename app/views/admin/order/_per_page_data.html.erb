<div class="table-responsive col-xs-12 ad_order">
  <table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Name</th>
        <th>Date</th>
        <th>Status</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <%# if order.payment.present? %>
          <tr>
            <td style="width:15%;">#<%= order.id %></td>
            <td style="width:15%;"><%= order.user.try(:fullname) %></td>
            <td style="width:20%;"><%= order.created_at.strftime("%B %d, %Y") %></td>
            <td style="width:15%;"><%= Order::STATUS.key(order.status) %></td>
            <td style="width:10%;">$0<%#= order.try(:payment).try(:amount)/100 %></td>
            <td style="width:10%; text-align:center"><a href="#"><i class="fa fa-info-circle" aria-hidden="true"></i></a></td>
          </tr>
        <%# end %>
      <% end %>
    </tbody>
  </table>
</div>

