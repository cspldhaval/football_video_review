      <li class="TabbedPanelsTab full-width TabbedPanelsTabSelected" tabindex="0">Video Pending Approval</li>
    </ul>
    <div class="TabbedPanelsContentGroup">
      <div class="TabbedPanelsContent">
        <div class="tab_content col-xs-12">
          <form class="col-xs-12">
            <ul class="col-xs-12">
              <div class="col-xs-12 col-sm-8 nopadding_lr">
                <li class="col-xs-12 nopadding_lr">
                  <div class=" col-xs-12 col-sm-2 nopadding_lr"> <span class="box" style="border-color:transparent;">
                    <h2 class="pull-left">Filter</h2>
                    </span> </div>
                  <div class="col-xs-12 col-sm-10 nopadding_lr"> <span class="box"> <%= image_tag "icons/search.png" %>
                    <input type="text" name="search">
                    </span> </div>
                </li>
              </div>
              <div class="col-xs-12 col-sm-4">
                <li class="col-xs-12 nopadding_lr">
                  <div class=" col-xs-8 nopadding_lr"> <span class="box" style="border-color:transparent;">
                    <h2 class="pull-right">show</h2>
                    </span> </div>
                  <div class="col-xs-4 nopadding_lr"> <span class="box arrow_down">
                    <select>
                      <option>1</option>
                      <option>2</option>
                      <option>3</option>
                      <option>4</option>
                      <option>5</option>
                      <option>6</option>
                      <option>7</option>
                      <option>8</option>
                      <option>9</option>
                      <option>10</option>
                    </select>
                    </span> </div>
                </li>
              </div>
            </ul>
          </form>
        </div>
        <div class="table-responsive col-xs-12 ad_order">
          <table class="table">
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Name</th>
                <th>Order On</th>
                <th></th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td style="width:15%;">#<%= order.id %></td>
                  <td style="width:20%;"><%= order.title %></td>
                  <td style="width:30%;"><%= order.created_at.strftime("%b %d, %Y - %H:%M ") %></td>
                  <td style="width:5%;"></td>
                  <td style="width:15%;">
                    <%#= link_to "Approve / Reject " ,admin_review_details_path(order.id) %>
                    <%= link_to admin_review_details_path(order.id) do %>
                      <i class="fa fa-check-circle green" aria-hidden="true"></i> Approve / Reject </a>
                    <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

