<h3>Pricing</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.name %></td>
        <td><%= text_field_tag :price, price.price, :class => "age_price", :id => price.id %></td>
        <td><%= link_to "Save",'', :class => "save_price" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<script type="text/javascript">

  var priceId;
  var priceVal;
  $('.age_price').change(function () {
    priceVal = $(this).val();
    priceId = $(this).attr('id');
  })

  $(".save_price").click(function(){
    $.ajax({
      url: '/admin/change_price',
      type: 'GET',
      data: {"id": priceId,
             "price": priceVal
            }
    });
  });
</script>