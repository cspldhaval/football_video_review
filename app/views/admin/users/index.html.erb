<% if params[:type] == "user"%>
  <h3>Users</h3>
<% else %>
  <h3>Reviewers</h3>
<% end %>
<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>User name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Phone number</th>
      <th>Current club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar.url(:thumb) %></td>
        <td><%= user.fullname %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.gender == 1 %>
            Male
          <% else %>
            Female
          <% end %>
        </td>
        <td><%= user.phone_number %></td>
        <td><%= user.current_club %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <% if user.is_reviewer? %>
          <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          
          <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if params[:type] == "reviewer" %>
  <%= link_to 'Add Reviewer', new_admin_user_path %>
<% end %>

